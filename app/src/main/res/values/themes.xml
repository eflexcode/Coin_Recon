        <item name="colorPrimary">@color/dark_turquoise</item>
        <item name="colorPrimaryVariant">@color/dark_turquoise</item>
        <item name="colorOnPrimary">@color/dark_turquoise</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_turquoise</item>
        <item name="colorSecondaryVariant">@color/dark_turquoise</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorAccent">@color/dark_turquoise</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <!-- Customize your theme here. -->

<!--        <attr name="text_color" format="color"/>-->
